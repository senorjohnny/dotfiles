# vim:filetype=i3
## Default modifier key
set $mod Mod4

set_from_resource $darkred     color1  #000000
set_from_resource $red         color9  #000000
set_from_resource $darkgreen   color2  #000000
set_from_resource $green       color10 #000000
set_from_resource $darkyellow  color3  #000000
set_from_resource $yellow      color11 #000000
set_from_resource $darkblue    color4  #000000
set_from_resource $blue        color12 #000000
set_from_resource $darkmagenta color5  #000000
set_from_resource $magenta     color13 #000000
set_from_resource $darkcyan    color6  #000000
set_from_resource $cyan        color14 #000000
set_from_resource $darkwhite   color7  #000000
set_from_resource $white       color15 #000000
set $black       #282828
set $darkblack   #1d2021
set $transparent #00000000

## Workspaces
set $ws1	"1  "
set $ws2	"2:  "
set $ws3	"3:  "
set $ws4	4
set $ws5	5
set $ws6	6
set $ws7	7
set $ws8	8
set $ws9	9
set $ws10	10

## Powerline font
#font pango:Terminess Powerline 8
font pango: Icons 10

## Lock screen settings
#bindsym $mod+shift+x exec i3lock -i ~/Pictures/star-trek-bg.png -c '#000000' -o '#228b22' -w '#8A0707' -l '#ffffff' -e
bindsym $mod+shift+x exec i3lock-fancy -- scrot -z

## Vim movement
set $up		k
set $down	j
set $left	h
set $right	l

## Default terminal emulator
set $term termite

## Set editor
set $editor termite

## Window dragging (disabled bacause no window borders)
floating_modifier $mod

## Start terminal
bindsym $mod+Shift+Return exec $term

## Light
bindsym XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 20

## Sound
bindsym XF86AudioRaiseVolume exec amixer sset -q Master 3%+
bindsym XF86AudioLowerVolume exec amixer sset -q Master 3%-
bindsym XF86AudioMute exec amixer -D pulse set Master 1+ toggle

## Kill focused window
bindsym $mod+q kill

## Application launchers
bindsym $mod+Shift+d exec --no-startup-id dmenu_run
#bindsym $mod+d exec rofi -show run -lines 25 -eh 1.5  -width 100 -padding 450 -opacity "40"
bindsym $mod+d exec rofi -show run

## Switch focus
bindsym $mod+$left	focus left
bindsym $mod+$down	focus down
bindsym $mod+$up	focus up
bindsym $mod+$right	focus right

## Move focused window
bindsym $mod+Shift+$left	move left
bindsym $mod+Shift+$down	move down
bindsym $mod+Shift+$up		move up
bindsym $mod+Shift+$right	move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

## Next split will be horizontal
bindsym $mod+s split h

## Next split will be vertical
bindsym $mod+v split v

## Bring focused window to full screen
bindsym $mod+Tab fullscreen toggle

## Change container layout (stacked, tabbed, toggle split)
#bindsym $mod+s layout stacking
#bindsym $mod+w layout tabbed
#bindsym $mod+e layout toggle split

## Toggle between tiling and floating
bindsym $mod+Shift+space floating toggle

## Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

## Docus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# move the currently focused window to the scratchpad
#bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
#bindsym $mod+minus scratchpad show

