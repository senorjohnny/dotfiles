set editor=`echo \$EDITOR`

# Personal info
set my_name="Uros Stegic"
set realname="Uros Stegic"
set imap_user=MY_EMAIL
set imap_pass=IMAP_PASS
set my_pass=MY_PASS
set my_user=MY_EMAIL
set from=MY_EMAIL

# SMTP settings
set smtp_url='smtps://MY_EMAIL@SMTP_ADDR:465/'
set smtp_pass=MY_PASS
set ssl_force_tls = yes

# Email folder settings
set mbox_type = Maildir
set folder = "~/.mail"
set mask = "!^\\.[^.]"
set mbox = "~/.mail"
set record = "+.Sent"
set postponed = "+.Postponed"
set spoolfile   = "+INBOX"
set message_cachedir = "~/.cache/mutt"
set header_cache = "~/.cache/mutt"

# Receive settings
set imap_check_subscribed
set imap_keepalive = 300
set mail_check = 60

# navbar ukljucen Shift-B za hide/show
set sidebar_visible = yes
bind index,pager B sidebar-toggle-visible

# grupisanje prepiski i sortiranje po datumu
set sort=threads
set sort_aux=reverse-last-date-received
set uncollapse_jump
set status_on_top
auto_view text/html

